<Window x:Class="WpfApp1.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        mc:Ignorable="d"  
        xmlns:watermarkHelper="clr-namespace:WpfApp1.WatermarkHelper" 
        xmlns:renamer="clr-namespace:WpfApp1.FileRenamer"  

        Title="MainWindow" Height="650" Width="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>

        <TextBox x:Name="FolderPathTextBox" Grid.Row="0" Width="200" Height="20"
             watermarkHelper:WatermarkHelper.Watermark="Enter Folder Path" />

        <TextBox x:Name="SuffixTextBox" Grid.Row="2" Width="200" Height="20"
             watermarkHelper:WatermarkHelper.Watermark="Enter Suffix" />

        <RichTextBox x:Name="LogBox" Grid.Row="4" Height="150" Width="600"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto" />

        <Grid Grid.Row="6" Width="220" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
            Content="Rename"
            Width="100" Height="30"
            Click="RenameButton_Click" />

            <Button Grid.Column="4"
            Content="Clear Log"
            Width="100" Height="30"
            Click="ClearLogButton_Click" />
        </Grid>

    </Grid>

</Window>

